<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataBase.DataHandlerActivity">


    <EditText
        android:id="@+id/userPhoneTxt"
        android:layout_width="289dp"
        android:layout_height="53dp"
        android:layout_marginBottom="48dp"
        android:hint="User Phone"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/insertRowFrom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userEmailTxt"
        android:layout_width="289dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:hint="User Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/userPhoneTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/userNameTxt"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userEmailTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <Button
        android:id="@+id/insertRowFrom"
        android:layout_width="178dp"
        android:layout_height="52dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/inseration_style"
        android:onClick="insertRow"
        android:text="Daten hinzufÃ¼gen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>